<%- include ("../partials/header") %>



<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Munro Tracker</h1>
			<p>explore and keep track of your munros</p>
			<p>
				<a class="btn btn-primary btn-large" href="/campgrounds/new">add a new mountain</a>
			</p>
		</div>
	</header>
	<div class="card-columns">
		<% campgrounds.forEach(function(campground){ %>
		<div class="card text-center">
			<img class="card-img-top img-fluid" src="<%=  campground.image %>" />
			<h4><%= campground.name %></h4>
			<a href="/campgrounds/<%= campground.id %>" id="more-info-button" class="btn btn-primary">More Info</a>
		</div>
		<%});%>
	</div>
</div>
<%- include ("../partials/footer") %>
