<%- include ("../partials/header") %>

<div class="container col-lg-6 col-xl-4">
	<h1>Add a new mountain</h1>
	<div class="col-lg-4 col-md-6 col-sm-12" id="form-container"></div>
	<form action="/campgrounds" method="POST">
		<div class="form-group">
			<label for="nameInput">Name</label>
			<input class="form-control" type="text" placeholder="name" name="name" id="nameInput" aria-describedby="nameHelp"/>
			<small id="nameHelp" class="form-text text-muted">You can add any mountain you want here</small>
		</div>
		<div class="form-group">
			<label for="walk-time">Walk Time</label>
			<input class="form-control" type="number" name="walkTime" placeholder="How long is the climb" min="1" step="0.5" name="campground[walk-time]" id="walk-time"/>
		</div>
		<div class="form-group">
			<label for="urlInput">Url</label>
			<input class="form-control" type="text" placeholder="image Url" name="image" id="urlInput" />
		</div>
		<div class="form-group">
			<label for="description-input">Description</label>
			<input class="form-control" type="text" placeholder="description" name="description" id="description-input" />
		</div>
		<div class="form-group">
			<label for="location">Location</label>
			<input class="form-control" type="text" name="location" id="location" placeholder="location">
		</div>
		<input type="submit" value="submit" class="form-control btn btn-primary"/>
	</form>
	<a href="/campgrounds">Go back</a>


</div>
<%- include ("../partials/footer") %>
